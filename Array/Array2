//Minimum and Maximum
import java.util.Arrays;

public class MinAndMax {
    public static void main(String[] args) {
        int []arr={10,5,12,3};
        // You can use sorting algorithm like bubble quick merge but i'm doing with method or heap
        Arrays.sort(arr);
        System.out.println("Minimum value in the given array is "+arr[0]);
        System.out.println("Maximum value in the array is "+arr[arr.length-1]);
    }
}
